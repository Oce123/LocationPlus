<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appToolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#000000"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
    app:title="LocationPlus">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="invisible" />

    <ToggleButton
        android:id="@+id/satelliteButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_information"
        android:button="@null"
        android:checked="false"
        android:contentDescription="@string/toggle_description"
        android:textOff=""
        android:textOn=""
        android:layout_gravity="end"/>

    <ToggleButton
        android:id="@+id/toggleAutoCenter"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_center_localisation"
        android:button="@null"
        android:checked="false"
        android:contentDescription="@string/toggle_description"
        android:textOff=""
        android:textOn=""
        android:layout_gravity="end"/>

</androidx.appcompat.widget.Toolbar>